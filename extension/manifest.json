{
  "manifest_version": 2,
  "name": "VaultKeeper",
  "version": "1.0.0",
  "description": "Gerenciador de senhas seguro com integração desktop",
  "author": "VaultKeeper Team",

  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage",
    "clipboardWrite",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "vaultkeeper@example.com"
    }
  }
}
